<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bookedLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tl1"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </TableLayout>

    <EditText
        android:layout_below="@id/tl1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="12sp"
        android:hint="请输入系统鉴权(下方教程)"
        android:background="@drawable/shape_wihte_frame"
        android:inputType="textPassword"
        android:id="@+id/weChat_cookie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/warn_id"
        android:layout_margin="10dp"
        android:layout_below="@id/weChat_cookie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/warn"
            android:gravity="center"
            android:textColor="#00868B"
            android:text="用户规范：不允许中途倒计时切换应用，不允许选座前多次重复进入微信来选座系统，否则导致失败"
            android:layout_width="match_parent"
            android:textSize="8sp"
            android:layout_height="wrap_content"
           />
    </LinearLayout>


    <Button
        android:id="@+id/start"
        android:hint="开始抢座 (点击后等待)"
        android:layout_below="@id/warn_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/know"
        android:text="⚠️选座操作必要须知！"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:textColor="#ff0000"
        android:layout_below="@id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_marginTop="30dp"
        android:id="@+id/tl2"
        android:layout_below="@id/start"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </TableLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/show_result"
        android:hint="抢座结果:"
        android:textColor="#333333"
        android:textSize="10sp"
        android:layout_below="@id/tl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/verify"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@id/show_result"
        android:layout_width="80dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/result"
        android:text="暂未抢座"
        android:textSize="16sp"
        android:textColor="#0066cc"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/verify"
        android:layout_width="match_parent"
        android:gravity="center"
        android:lines="2"
        android:layout_centerVertical="true"
        android:layout_height="50dp" />


    <TextView
        android:id="@+id/timer"
        android:text="倒计时"
        android:textSize="20sp"
        android:textColor="#cc3333"
        android:layout_marginTop="10dp"
        android:layout_below="@id/result"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:id="@+id/tl3"
        android:background="#f5f5f5"
        android:layout_marginTop="30dp"
        android:layout_below="@id/timer"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </TableLayout>

    <TextView
        android:id="@+id/teach"
        android:layout_below="@id/tl3"
        android:text="观看详细使用教程！"
        android:textSize="12sp"
        android:autoLink="all"
        android:layout_marginTop="24dp"
        android:textColor="#6E6E6E"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/get_cookie"
        android:layout_below="@id/teach"
        android:text="获取输入鉴权教程！"
        android:textSize="12sp"
        android:autoLink="all"
        android:layout_marginTop="24dp"
        android:textColor="#6E6E6E"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/get_software"
        android:layout_below="@id/get_cookie"
        android:text="获取提取鉴权工具！"
        android:textSize="12sp"
        android:autoLink="all"
        android:textColor="#6E6E6E"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mySay"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_below="@id/get_software"
        android:text="青春逝去没有什么可悲可叹的，如果在青春之年因为自己的懦弱而不去追寻梦想，才是真的可悲可叹！"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/webLayout"
        android:layout_toRightOf="@id/teach"
        android:layout_below="@id/tl3"
        android:text="免费使用Google搜索服务！"
        android:textSize="12sp"
        android:autoLink="all"
        android:textColor="#6E6E6E"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>